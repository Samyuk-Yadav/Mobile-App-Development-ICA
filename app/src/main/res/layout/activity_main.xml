        <Button
            android:id="@+id/truth_and_dare"
            android:layout_width="409dp"
            android:layout_height="71dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/bg_switch"
            android:text="Truth and Dare"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="@+id/btngames"
            app:layout_constraintStart_toStartOf="@+id/btngames"
            app:layout_constraintTop_toBottomOf="@+id/btngames" />

        <Button
            android:id="@+id/notes"
            android:layout_width="408dp"
            android:layout_height="70dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/bg_switch"
            android:text="Notes"
            android:textSize="32sp"
